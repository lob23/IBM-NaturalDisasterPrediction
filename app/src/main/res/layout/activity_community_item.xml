<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="25dp"
    android:background="@drawable/community_item_setting"
    android:radius="20dp"
    tools:context=".Community.CommunityItem">

    <ImageView
        android:id="@+id/communityItemImage"
        android:layout_width="105dp"
        android:layout_height="97dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/rounded_image_view"/>

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="0dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@+id/communityItemImage"
        app:layout_constraintTop_toTopOf="@+id/communityItemImage"

        android:fontFamily="@font/fredoka"
        android:textStyle="bold"
        android:text="Vic Luu"/>

    <TextView
        android:id="@+id/userLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"

        app:layout_constraintStart_toEndOf="@+id/communityItemImage"
        app:layout_constraintTop_toBottomOf="@+id/userName"

        android:fontFamily="@font/fredoka"
        android:textStyle="italic"
        android:text="Ho Chi Minh, Viet Nam"
        android:maxLines="1"/>



</androidx.constraintlayout.widget.ConstraintLayout>