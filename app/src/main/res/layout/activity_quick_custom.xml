<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp.QuickCustom"
    android:background="@color/blue_light">

    <TextView
        android:id="@+id/Title5"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="150dp"
        android:text="Do you want to add ration calculation? "
        android:textColor="@color/blue_text"
        android:fontFamily="@font/fredoka_medium"
        android:textSize="36sp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Title5"
        android:text="Ration refers to a controlled distribution of limited resources, such as food or goods, often during shortages or emergencies. It ensures fair access for all by providing fixed portions to prevent hoarding and manage supplies efficiently."
        android:fontFamily="@font/fredoka"
        android:textSize="14sp"
        android:textColor="@color/blue_text"
        android:paddingHorizontal="25dp"
        android:layout_marginTop="20dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Title5"
        android:layout_marginTop="180dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/QuickButton"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="10dp"
            android:text="Quick"
            android:fontFamily="@font/fredoka_medium"
            android:textSize="30sp"
            android:textColor="@color/blue_text"
            android:gravity="center"
            android:background="@drawable/button1"/>

        <TextView
            android:id="@+id/CustomButton"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="10dp"
            android:text="Custom"
            android:fontFamily="@font/fredoka_medium"
            android:textSize="30sp"
            android:textColor="@color/blue_text"
            android:gravity="center"
            android:background="@drawable/button1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>