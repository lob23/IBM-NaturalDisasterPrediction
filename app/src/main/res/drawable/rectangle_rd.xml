<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set background color -->
    <solid android:color="#FFFFFF" /> <!-- Replace with your desired color -->

    <!-- Set border width and color (optional) -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" /> <!-- Replace with your desired color -->

    <!-- Set corner radius -->
    <corners android:radius="16dp" /> <!-- Adjust the radius as needed -->

    <!-- Set padding (optional) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
